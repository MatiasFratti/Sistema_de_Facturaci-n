@model Sistema_de_Facturacion.Models.Usuarios


<style>

    #titulo_login {
        font-family: 'Merienda One', cursive;
    }


</style>

@using (Html.BeginForm("Logearse", "Usuarios"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <center>
            <h3 id="titulo_login">Iniciar sesión</h3>
            <div class="text-danger">
                @ViewBag.error
            </div>
            <hr />
            <div class="form-group">               
                
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @placeholder="Ingrese nombre" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                
            </div>

            <div class="form-group">
                         
                @Html.EditorFor(model => model.Contraseña, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese contraseña", @type = "password" } })
                @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })
                
            </div>

            <div class="form-group">

                <div class="boton">
                    @Html.ActionLink("Registrarse", "Registro", "Usuarios",null,new { @style="color:black"})<br />
                    <input type="submit" value="Iniciar sesión" class="btn btn-default btn block" style="background-color:#000; color:white" />
                </div>
            </div>
        </center>
    </div>
}
<br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
}
