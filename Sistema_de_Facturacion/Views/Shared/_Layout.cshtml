<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema de facturación</title>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Merienda+One" rel="stylesheet">


    <style>
        body {
            background: white; /*url("https://previews.123rf.com/images/siraphol/siraphol1504/siraphol150405358/39057920-blanca-ladrillo-de-hormig%C3%B3n-texturas-de-la-pared-de-fondo.jpg");*/
            background-repeat: no-repeat;
            background-size: 100% 100%;
            background-attachment: fixed;
        }

        td {
            font-weight: 600;
        }

        .nav {
            margin-top: 6px;
        }

        ul, ol {
            list-style: none;
        }

        .nav > li {
            float: left;
            margin: 0 5px 0 5px;
        }

        .nav li a {
            background-color: #000;
            color: #fff;
            text-decoration: none;
            padding: 10px 12px;
            display: block;
            border-radius: 5px;
        }

            .nav li a:hover {
                background-color: #434343;
            }

        .nav li ul {
            display: none;
            position: absolute;
            min-width: 140px;
            margin-left: -41px;
        }

        .nav li:hover > ul {
            display: block;
        }

        .nav li ul li {
            position: relative;
        }

        #stock {
            width: 98px;
            text-align: center;
        }

        #clientes {
            width: 98px;
            text-align: center;
        }

        #mi_perfil {
            width: 98px;
            text-align: center;
        }
    </style>
    

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav">
                    @if (Session["UsuarioId"] == null)
                    {
                        <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                        <li style="float:right">@Html.ActionLink("Registrarse", "Registro", "Usuarios")</li>
                        <li style="float:right">@Html.ActionLink("Iniciar sesión", "Logearse", "Usuarios")</li>
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Facturación", "Facturar", "Facturas")
                            <ul>
                                <li>@Html.ActionLink("Facturar", "Facturar", "Facturas")</li>
                                <li>@Html.ActionLink("Listado Facturas", "DetalleFacturas", "Facturas")</li>
                                <li>@Html.ActionLink("Pagos", "DetalleRecibos", "Facturas")</li>
                                <li>@Html.ActionLink("Recibo de Pago", "ReciboDePago", "Facturas")</li>
                                <li>@Html.ActionLink("Listado Recibos", "DetalleRecibos", "Facturas")</li>
                            </ul>
                        </li>
                        <li id="stock">
                            @Html.ActionLink("Stock", "Index", "Productos")
                            <ul>
                                <li>@Html.ActionLink("Ver Stock", "Index", "Productos")</li>
                                <li>@Html.ActionLink("Agregar", "Create", "Productos")</li>
                            </ul>
                        </li>
                        <li id="clientes">
                            @Html.ActionLink("Clientes", "Index", "Clientes")
                            <ul>
                                <li>@Html.ActionLink("Ver Clientes", "Index", "Clientes")</li>
                                <li>@Html.ActionLink("Agregar", "Create", "Clientes")</li>
                            </ul>
                        </li>
                        <li id="mi_perfil">
                            @Html.ActionLink("Mi Perfil", "Details", "Usuarios", new { id = (int)Session["UsuarioId"] }, null)
                            <ul>
                                <li>@Html.ActionLink("Editar", "Edit", "Usuarios", new { id = (int)Session["UsuarioId"] }, null)</li>
                                <li>@Html.ActionLink("Cerrar sesión", "CerrarSesion", "Home")</li>
                            </ul>
                        </li>
                        <li> @Html.ActionLink("Cerrar sesión", "CerrarSesion", "Home") </li>

                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr style="border: solid 1px; color:black;" />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sistema de facturación</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

</body>
</html>
